{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000/"],
      "numberOfRuns": 2
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "bf-cache": "off",
        "color-contrast": "off",
        "csp-xss": "off",
        "meta-description": ["warn", { "minScore": 0 }],
        "tap-targets": ["warn", { "minScore": 0.7 }],
        "total-byte-weight": "off",
        "valid-source-maps": "off",
        "unminified-css": "off",
        "unminified-javascript": "off",
        "unused-javascript": "off",
        "interactive": ["warn", { "minScore": 0.1 }],
        "largest-contentful-paint": ["warn", { "minScore": 0.88 }],
        "render-blocking-resources": "warn",
        "bootup-time": "warn",
        "dom-size": "warn",
        "mainthread-work-breakdown": "warn",
        "max-potential-fid": "warn",
        "server-response-time": "warn"
      }
    }
  }
}
