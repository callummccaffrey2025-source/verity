{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "src/**/*",
    "tailwind.config.js",
    ".next/types/**/*.ts",
    "tailwind.config.cjs",
    "src/types/**/*.d.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "e2e/**",
    "node_modules",
    "src/__tests__/**",
    "src/components/BillCard.tsx",
    "src/components/bill/BillCard.tsx"
  ]
}