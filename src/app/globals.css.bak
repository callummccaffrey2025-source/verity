@tailwind base;
@tailwind components;
@tailwind utilities;

/* --- Base theme --- */
:root { color-scheme: dark; }
html, body { height: 100%; }
body { @apply bg-black text-zinc-200; }

/* Focus ring for accessibility */
:focus-visible { @apply outline-none ring-2 ring-emerald-500/60; }

/* Basic primitives you use in the hero/buttons */
.btn { @apply inline-flex items-center gap-2 rounded-lg border border-zinc-800 bg-zinc-900 px-4 py-2 text-sm hover:bg-zinc-800; }
.btn-primary { @apply border-emerald-700/40 bg-emerald-600/10 text-emerald-400 hover:bg-emerald-600/20; }
.card { @apply rounded-xl border border-zinc-800 bg-zinc-900 p-4; }

/* Visually-hidden but focusable skip link */
.skip-link { @apply sr-only focus:not-sr-only fixed left-4 top-4 z-50 rounded bg-zinc-900 px-3 py-2 text-sm; }
