@import "tailwindcss";

:root { color-scheme: dark; }
html, body { height: 100%; }


@layer base {
  :root { font-family: "Inter Variable", ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans"; }
  .font-sans { font-family: "Inter Variable", ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans"; }
}


/* Focus ring standardization */
.focus-ring { outline: none; box-shadow: 0 0 0 2px rgba(255,255,255,0.2); }
/* 8pt spacing utilities for gaps we reuse */
:root { --gap-2: .5rem; --gap-3: .75rem; --gap-4: 1rem; }


:root{
  /* brighter foregrounds for dark UI */
  --foreground: 240 10% 96%;
  --muted-foreground: 240 5% 78%;
}
*{ color: hsl(var(--foreground)); }


/* Homepage hero contrast helpers */
:root{
  /* keep brand vibe but meet WCAG AA */
  --foreground: 240 10% 98%;
  --muted-foreground: 240 5% 80%;
}
.home-hero h1,
.home-hero p { color: hsl(var(--foreground)); }
.home-hero{ position: relative; }
.home-hero::before{
  content:"";
  position:absolute; inset:0;
  background: linear-gradient(to bottom, rgba(0,0,0,.45), rgba(0,0,0,.55));
  pointer-events:none;
}


/* verity-pages */
:root{
  --ring: 240 3.7% 15.9%;
}
input,select,button{ outline: none }
input:focus,select:focus,button:focus{ box-shadow: 0 0 0 2px hsl(var(--ring)) }
