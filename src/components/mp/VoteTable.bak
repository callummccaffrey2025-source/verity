import Link from 'next/link';
import { MP } from '@/lib/types-compat';

export default function VoteTable({ mp }: { mp: MP }) {
  const votes = (mp.votes ?? []) as { title: string; position: string; date?: string; billId?: string; billTitle?: string; vote?: string }[]; position: string; date?: string }[];
  if (!votes.length) return <p className="text-sm text-neutral-500">No votes recorded.</p>;

  return (
    <div className="overflow-x-auto">
      <table className="w-full text-sm">
        <thead>
          <tr className="text-left border-b">
            <th className="py-2 pr-4">Date</th>
            <th className="py-2 pr-4">Bill</th>
            <th className="py-2 pr-4">Vote</th>
          </tr>
        </thead>
        <tbody>
          {votes.map((v: { title: string; position: string; date?: string }) => (
            <tr key={`${v.billId ?? v.title}-${v.date ?? i}`} className="border-b last:border-b-0">
              <td className="py-2 pr-4 whitespace-nowrap">{v.date ? new Date(v.date).toLocaleDateString() : 'â€”'}</td>
              <td className="py-2 pr-4">
                {v.billId ? <Link href={`/bills/${v.billId}`} className="underline underline-offset-2">{v.billTitle ?? v.title}</Link> : (v.billTitle ?? v.title)}
              </td>
              <td className="py-2 pr-4">{v.vote ?? v.position}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  );
}
